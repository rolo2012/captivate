<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory
        android:title="@string/about_category_title" >
	    <PreferenceScreen
	        android:key="aboutKey"
	        android:title="@string/about_title">
	        <intent
	            android:action="android.intent.action.MAIN"
	            android:targetPackage="com.zachklipp.captivate"
	            android:targetClass="com.zachklipp.captivate.AboutActivity" />
	    </PreferenceScreen>
	    <PreferenceScreen
	        android:key="feedbackKey"
	        android:title="@string/feedback_title">
	        <intent
	            android:action="android.intent.action.SEND"
                android:mimeType="plain/text">
                <!-- Email is an array, so can't be set from XML. PreferenceActivity.onCreate does that. -->
	            <extra android:name="android.intent.extra.SUBJECT" android:value="@string/feedback_subject" />
            </intent>
	    </PreferenceScreen>
	</PreferenceCategory>
</PreferenceScreen>